/ メモ新規作成ページ
.container
  %h2.title New Memo
  = form_with( model: @memo, url: memos_path, local: true) do |f|
    = render 'layouts/error_messages', model: f.object
    .from-groups
      = f.label  "category", class: "form-groups__label"
      = f.select :category_id, options_from_collection_for_select(@categories, :id, :name), {prompt: '---'}, {class: 'form-groups__field'}
    .form-groups
      = f.label "title", class: "form-groups__label"
      = f.text_field :title, class: 'form-groups__field', placeholder: 'Title'

    .form-groups
      = f.label "content", class: "form-groups__label"
      = f.text_area :content, class: "form-groups__content", placeholder: "Going to write "

    = f.submit "Create", class:"btn btn-primary"
